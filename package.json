{
  "name": "lex-talk-server",
  "version": "1.0.0",
  "description": "Server for LexTalk app",
  "main": "index.ts",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --mode production",
    "watch": "concurrently \"cross-env NODE_ENV=development webpack --mode development --watch\" \"nodemon ./dist/bundle.js\"",
    "start": "cross-env NODE_ENV=production webpack --mode production && node ./dist/bundle.js"
  },
  "keywords": [
    "typescript",
    "messenger",
    "websocket",
    "graphql"
  ],
  "author": "mxzpytlk",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.7",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4",
    "webpack": "^5.39.1",
    "webpack-cli": "^4.7.2",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.5.1",
    "mongoose": "^5.12.14"
  }
